<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchTheme1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/switch_button_margin"
        android:layout_marginTop="@dimen/switch_button_margin"
        android:checked="false"
        android:minHeight="@dimen/min_height_switch_button">
    </com.google.android.material.switchmaterial.SwitchMaterial>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/switch_button_margin"
            android:text="Theme 1"
            android:textSize="20dp"
            android:layout_marginStart="@dimen/switch_button_margin">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchTheme2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/switch_button_margin"
            android:layout_marginTop="@dimen/switch_button_margin"
            android:checked="false"
            android:minHeight="@dimen/min_height_switch_button">
        </com.google.android.material.switchmaterial.SwitchMaterial>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/switch_button_margin"
            android:text="Theme 2"
            android:textSize="20dp"
            android:layout_marginStart="@dimen/switch_button_margin">
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchTheme3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/switch_button_margin"
            android:layout_marginTop="@dimen/switch_button_margin"
            android:checked="false"
            android:minHeight="@dimen/min_height_switch_button">
        </com.google.android.material.switchmaterial.SwitchMaterial>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/switch_button_margin"
            android:text="Theme 3"
            android:textSize="20dp"
            android:layout_marginStart="@dimen/switch_button_margin">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchTheme4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/switch_button_margin"
            android:layout_marginTop="@dimen/switch_button_margin"
            android:checked="false"
            android:minHeight="@dimen/min_height_switch_button">
        </com.google.android.material.switchmaterial.SwitchMaterial>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/switch_button_margin"
            android:text="Theme 4"
            android:textSize="20dp"
            android:layout_marginStart="@dimen/switch_button_margin">
        </TextView>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/returnButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:cornerRadius="70dp"
        android:backgroundTint="@color/purple_200"
        android:textSize="33sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="return" />


</LinearLayout>